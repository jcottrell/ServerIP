{
  "name": "Server IP",
  "version": "2.1.1",
  "description": "View Server IP address or alias",
  "background": { "scripts": ["background.js"] },
  "permissions": ["webRequest","<all_urls>","tabs"],
  "options_page": "options.html",
  "browser_action" : {
	  "default_title"	: "ServerIP",
	  "default_icon"	: "icon.png"
  },
  "content_scripts" :[{
	  "matches"	: ["<all_urls>"],
	  "js"		: ["hover-box.js"]
  }],
  "manifest_version": 2
}
